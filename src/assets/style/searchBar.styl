@import './vari'

.search_bar
  height 50px
  background-color #eae6e6
  border-bottom 1px solid border-color
  padding 9px
  input
    height 32px
    width 100%
    background-color #fff
    border 1px solid border-color
    font-size 16px
  form
    display inline-block
    width 80%
  .cancel
    color greyfont
    border none
    font-size 18px
    float right
    margin-right 15px
    margin-top 3px
.no_result
    text-align center
    padding-top 30px