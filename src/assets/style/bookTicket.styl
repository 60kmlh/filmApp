@import './vari'

.bookTicket
  margin 10px
  .cinemas
    padding 5px 20px
    border-bottom 1px solid border-color
    .name
      font-size 20px
    .address
      font-size 12px
      color greyfont
      display inline-block
      margin-top 10px
    .tel
      float right
      font-size 12px
      display inline
      padding 4px 8px
      color green
      border 1px solid green
      border-radius 4px 
      margin-top -14px
  .posterList
    border-bottom 1px solid border-color
    padding 15px 10px
    img
      width 60px
      opacity: 0.7
      transform: scale(0.8)
      transition: all 300ms ease
  .slick-center
    img
      opacity: 1
      transform: scale(1)
  .film_title
    text-align center
    padding 12px
    font-weight bold
  .info
    display flex
    justify-content space-around
    border-bottom 1px solid border-color
    padding 15px
  .time
    font-weight bold
    font-size 20px
  .hall
    font-size 12px
  .price
    font-weight bold
    color red
    